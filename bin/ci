#!/bin/sh
set -ex

# Build webpages
hugo

# Build elamicon tool
git clone --depth 1 https://github.com/elamicon/elamicon.git elamicon
(
  cd elamicon
  make build
  make webfonts
)
mv elamicon/build public/tool

# Tell Github Pages what domain to serve from
echo center-for-decipherment.ch > public/CNAME